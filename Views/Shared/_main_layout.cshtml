<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] | AlertMe</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #ffffff;
            color: #e5e7eb;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background: #ececec;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            transition: width 0.3s ease;
            z-index: 1000;
        }

        .sidebar.collapsed {
            width: 80px;
        }

        .sidebar.collapsed .logo {
            display: none;
        }

        .sidebar .logo {
            color: #000000;
            font-size: 1.2rem;
            font-weight: 700;
            padding: 1.5rem;
        }

        .sidebar a {
            color: #8c8c8c;
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            text-decoration: none;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background: #f3f4f6;
            color: #22c55e;
        }

        .sidebar.collapsed span {
            display: none;
        }

        .toggle-btn {
            position: absolute;
            right: -15px;
            top: 20px;
            background: #22c55e;
            border: none;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            color: #000;
            cursor: pointer;
        }

        /* Main Content */
        .main-content {
            margin-left: 260px;
            padding: 2rem;
            transition: margin-left 0.3s ease;
        }

        .sidebar.collapsed+.main-content {
            margin-left: 80px;
        }

        /* Top bar */
        .top-bar {
            background: #020617;
            padding: 1rem 2rem;
            border-bottom: 1px solid #1f2937;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .crypto {
            display: flex;
            gap: 2rem;
            font-weight: 600;
        }

        .price-up {
            color: #22c55e;
        }

        .price-down {
            color: #ef4444;
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <nav class="sidebar" id="sidebar">
        <button class="toggle-btn" onclick="toggleSidebar()">
            <i class="fas fa-chevron-left"></i>
        </button>

        <div class="logo">📊 StocksApp</div>

        <a asp-controller="Home" asp-action="Index" class="active">
            <i class="fas fa-home"></i><span>Dashboard</span>
        </a>
        <a asp-controller="Alert" asp-action="Create">
            <i class="fas fa-bell"></i><span>Alerts</span>
        </a>

         @if (User.Identity?.IsAuthenticated == true)
        {
            <form asp-controller="Auth"
                asp-action="Logout"
                method="post"
                style="display:inline">
                @Html.AntiForgeryToken()
                <button type="submit">Logout</button>
            </form>
        }
    </nav>

    <!-- MAIN -->
    <div class="main-content">
        
        <!-- TOP BAR -->
        <div class="top-bar">
            <h5 class="mb-0">Market Overview</h5>

            <div class="crypto">
                <div>BTC: <span id="btcPrice">--</span></div>
                <div>ETH: <span id="ethPrice">--</span></div>
                <div>SOL: <span id="solPrice">--</span></div>
            </div>
        </div>

        <!-- PAGE CONTENT -->
        @RenderBody()

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("collapsed");
            document.getElementById("")
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>